<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/test</item>
    </style>

    <style name="Linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/greatbritish_quiz</item>
    </style>


    <style name="View_line">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:layout_marginRight">@dimen/margin_right</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">@dimen/padding_view</item>
    </style>


    <style name="Welcome_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_left</item>
        <item name="android:paddingRight">@dimen/padding_right</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/welcomeText_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="title_questionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/question_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="questionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
        <item name="android:paddingTop">@dimen/padding_top_question</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/question_size</item>
        <item name="android:textStyle">italic|bold</item>
    </style>


    <style name="Radio_group">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Radio_buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/answerText_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_leftEdit</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
        <item name="android:paddingTop">@dimen/padding_top</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:inputType">text</item>
        <item name="android:textCursorDrawable">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/answerText_size</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/buttonText_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
